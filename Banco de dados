const Database = require('better-sqlite3');
const db = new Database('usuarios.db');

// Cria a tabela se n√£o existir
db.prepare(`
  CREATE TABLE IF NOT EXISTS usuarios (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    nome TEXT NOT NULL,
    email TEXT NOT NULL UNIQUE,
    senha TEXT NOT NULL
  )
`).run();

module.exports = db;
